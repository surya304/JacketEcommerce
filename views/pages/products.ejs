<!DOCTYPE html>
<html>
<head>
    <title>My EJS eCommerce Site</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
      <link rel="stylesheet" href="/css/styles.css">


    
  
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container my-4">
        <div class="dropdown mb-4">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" alt="product1">
                Filter by price
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" href="#">Lowest to highest</a></li>
                <li><a class="dropdown-item" href="#">Highest to lowest</a></li>
            </ul>
        </div>
        <div class="row">
            <% for(let i=0; i<5; i++) { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow bg-dark text-white">
                        <img src="https://mybucket4345.s3.us-east-2.amazonaws.com/php/Screenshot+2024-03-05+144326.png" class="card-img-top" alt="Product image">
                        <div class="card-body">
                            <h5 class="card-title">Product Title</h5>
                            <p class="card-text text-light">Product description</p>
                            <p class="card-text text-success">$99.99</p>
                            <p class="card-text text-warning">★★★★☆</p>
                            <a href="/productDetails" class="btn btn-primary">Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>